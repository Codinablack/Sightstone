<UserControl x:Class="Sightstone.Views.Controls.TopSlideUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sightstone.Views.Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="824">
    <Grid>
        <materialDesign:Card UniformCornerRadius="3" Height="50" Background="LightYellow" ClipToBounds="True">
            <Grid>
                <Label x:Name="InfoLabel" Content="Replay is still recording" cal:View.Model="{Binding InfoLabel}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="804"/>
                <ProgressBar x:Name="ProgressBar" cal:View.Model="{Binding ProgressBar}" IsIndeterminate="True" HorizontalAlignment="Stretch" Height="10" VerticalAlignment="Top" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
